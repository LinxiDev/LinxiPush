# ç”¨äºç”Ÿæˆéšæœºç»çº¬åº¦
def generate_random_location(lat, lng, radius):
    earth_radius = 6371000
    lat_rad = math.radians(lat)
    lng_rad = math.radians(lng)
    for _ in range(100):
        random_angle = random.uniform(0, 2 * math.pi)
        random_radius = radius * random.uniform(0, 1)
        new_lat = math.asin(math.sin(lat_rad) * math.cos(random_radius / earth_radius) +
                            math.cos(lat_rad) * math.sin(random_radius / earth_radius) * math.cos(random_angle))
        new_lat_deg = math.degrees(new_lat)
        new_lng = lng_rad + math.atan2(math.sin(random_angle) * math.sin(random_radius / earth_radius) * math.cos(lat_rad),
                                      math.cos(random_radius / earth_radius) * math.sin(lat_rad))
        new_lng_deg = math.degrees(new_lng)
        if geodesic((new_lat_deg, new_lng_deg), (lat, lng)).meters <= radius:
            return new_lat_deg, new_lng_deg
    return lat, lng

def user_info(i, ck):
    headers["Authorization"] = ck["Authorization"]
    result_info = ss.post(domain + "/Info", headers=headers).json()
    result_settings = ss.post(domain + "/Settings", headers=headers).json()

    if result_info['Code'] == 0 and result_settings['Code'] == 0:
        print(f"è´¦å·ã€{i + 1}ã€‘âœ… ")
        info_message = f"å­¦æ ¡ï¼š{result_settings['Data']['SchoolName']} å­¦å·ï¼š{result_settings['Data']['StudentNo']} å§“åï¼š{result_settings['Data']['StudentName']}\nå®ä¹ å•ä½ï¼š{result_settings['Data']['CompanyName']} å®ä¹ èŒä½ï¼š{result_info['Data']['Post']} ç­¾åˆ°å¤©æ•°ï¼š{result_info['Data']['TotalSignCount']}"
        print(info_message)
        if os.getenv("linxi_push"):
            Wxpusher(name, os.getenv("linxi_push"), info_message)
    else:
        error_message = f"è·å–ä¿¡æ¯å¤±è´¥: {result_info.get('msg', 'æ— ä¿¡æ¯')} è·å–è®¾ç½®å¤±è´¥: {result_settings.get('msg', 'æ— è®¾ç½®')}"
        print(f"è´¦å·ã€{i + 1}ã€‘âŒ{error_message}")


def do_read(i, ck):
    headers["Authorization"] = ck["Authorization"]
    info_response = ss.post(domain + "/Info", headers=headers).json()

    # å…ˆæ£€æŸ¥æ˜¯å¦å·²ç»ç­¾åˆ°
    if info_response and 'Data' in info_response and info_response['Code'] == 0:
        sign_today = info_response['Data'].get('SignToday', False)
        if sign_today:
            print(f"è´¦å·ã€{i + 1}ã€‘âœ…ä»Šå¤©å·²ç»ç­¾åˆ°è¿‡äº†")
            return  # å¦‚æœä»Šå¤©å·²ç»ç­¾åˆ°è¿‡ï¼Œåˆ™ä¸å†æ‰§è¡Œç­¾åˆ°æ“ä½œ
    else:
        print(f"è´¦å·ã€{i + 1}ã€‘âŒè·å–ç­¾åˆ°çŠ¶æ€å¤±è´¥: {info_response.get('Msg', 'æ— é”™è¯¯ä¿¡æ¯')}")
        return  # å¦‚æœè·å–ç­¾åˆ°çŠ¶æ€å¤±è´¥ï¼Œåˆ™ä¸å†æ‰§è¡Œç­¾åˆ°æ“ä½œ
    settings_data = ss.post(domain + "/Settings", headers=headers).json()

    if settings_data and 'Data' in settings_data and settings_data['Code'] == 0:
        random_lat, random_lng = generate_random_location(settings_data['Data']['CompanyLat'],settings_data['Data']['CompanyLng'],settings_data['Data']['SignRange'])
        # å°è¯•ç­¾åˆ°
        if geodesic((random_lat, random_lng), (settings_data['Data']['CompanyLat'], settings_data['Data']['CompanyLng'])).meters <= settings_data['Data']['SignRange']:
            sign_data = {"Lat": random_lat, "Lng": random_lng}
            sign_response = requests.post(domain + "/Sign", headers=headers, json=sign_data)
            result = sign_response.json()

            if result and 'Code' in result and result['Code'] == 0:
                sign_message = f"è´¦å·ã€{i + 1}ã€‘âœ…ç­¾åˆ°æˆåŠŸ\nç­¾åˆ°ä½ç½®ï¼š({random_lat}, {random_lng})"
                print(sign_message)
                if os.getenv("linxi_push"):
                    Wxpusher(name, os.getenv("linxi_push"), sign_message)
            else:
                message = f"è´¦å·ã€{i + 1}ã€‘âŒç­¾åˆ°å¤±è´¥: {result.get('Msg', 'æœªçŸ¥é”™è¯¯')}"
                print(message)
                if os.getenv("linxi_push"):
                    Wxpusher(name, os.getenv("linxi_push"), message)
        else:
            print(f"ç”Ÿæˆçš„éšæœºä½ç½®ä¸åœ¨ç­¾åˆ°èŒƒå›´å†…")
    else:
        message = f"è´¦å·ã€{i + 1}ã€‘è·å–ç­¾åˆ°ä¿¡æ¯å¤±è´¥: {settings_data.get('Msg', 'æ— é”™è¯¯ä¿¡æ¯')}"
        print(message)
        if os.getenv("linxi_push"):
            Wxpusher(name, os.getenv("linxi_push"), message)




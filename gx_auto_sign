    with Pool() as pool:
        print("==================ğŸ‘»è·å–è´¦å·ä¿¡æ¯ğŸ‘»=================")
        pool.starmap(process_wrapper, [(user_info, (i, ck)) for i, ck in enumerate(ck_token)])
        print("==================ğŸ’«å¼€å§‹æ‰§è¡Œä»»åŠ¡ğŸ’«=================")
        pool.starmap(process_wrapper, [(do_read, (i, ck)) for i, ck in enumerate(ck_token)])
        print("==================ğŸ£è·å–è´¦å·ä¿¡æ¯ğŸ£=================")
        pool.starmap(process_wrapper, [(user_info, (i, ck)) for i, ck in enumerate(ck_token)])
